<%- include('partials/header') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card border-danger">
        <div class="card-header bg-danger text-white">
          <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Error</h4>
        </div>
        <div class="card-body">
          <h5 class="card-title">
            <% if (typeof message !== 'undefined') { %>
              <%= message %>
            <% } else { %>
              An error occurred
            <% } %>
          </h5>
          
          <% if (locals.error && locals.error.status) { %>
            <p class="text-muted">Status: <%= locals.error.status %></p>
          <% } %>
          
          <div class="alert alert-secondary mt-4">
            <h6>Technical Details</h6>
            <% if (locals.error && locals.error.stack) { %>
              <pre class="mb-0 text-danger"><code><%= locals.error.stack %></code></pre>
            <% } else { %>
              <p class="mb-0">No additional error information available.</p>
            <% } %>
          </div>
          
          <div class="mt-4">
            <a href="/" class="btn btn-primary me-2">
              <i class="bi bi-house-door me-1"></i>Home
            </a>
            <button class="btn btn-secondary" onclick="window.history.back()">
              <i class="bi bi-arrow-left me-1"></i>Go Back
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
