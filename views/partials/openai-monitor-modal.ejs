<!-- OpenAI API Monitor Modal -->
<div class="modal fade" id="openaiMonitorModal" tabindex="-1" aria-labelledby="openaiMonitorModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header bg-dark text-white">
        <h5 class="modal-title" id="openaiMonitorModalLabel">
          <i class="bi bi-hdd-network me-2"></i>OpenAI API Monitor
          <span class="badge bg-success ms-2" id="api-status-badge">Connected</span>
        </h5>
        <div class="ms-auto me-2">
          <button type="button" class="btn btn-sm btn-outline-light" id="refresh-events-btn">
            <i class="bi bi-arrow-clockwise"></i> Refresh
          </button>
          <div class="form-check form-switch d-inline-block ms-2">
            <input class="form-check-input" type="checkbox" id="auto-refresh-toggle" checked>
            <label class="form-check-label text-light" for="auto-refresh-toggle">Auto-refresh</label>
          </div>
        </div>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body bg-light p-0">
        <div class="d-flex justify-content-between p-2 bg-secondary text-white">
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-sm btn-outline-light active filter-btn" data-filter="all">All</button>
            <button type="button" class="btn btn-sm btn-outline-light filter-btn" data-filter="request">Requests</button>
            <button type="button" class="btn btn-sm btn-outline-light filter-btn" data-filter="response">Responses</button>
            <button type="button" class="btn btn-sm btn-outline-light filter-btn" data-filter="error">Errors</button>
          </div>
          <span class="text-white" id="events-count">0 events</span>
        </div>
        
        <!-- Events list container -->
        <div class="api-events-container" id="api-events-container">
          <div class="text-center p-5" id="no-events-message">
            <i class="bi bi-clock-history text-muted" style="font-size: 3rem;"></i>
            <p class="mt-3 text-muted">No API events recorded yet.</p>
            <p class="text-muted small">Events will appear here when you interact with the OpenAI API.</p>
          </div>
          <div id="events-list" class="d-none">
            <!-- Events will be inserted here dynamically -->
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-danger" id="clear-events-btn">Clear All Events</button>
        <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<!-- Event item template - to be cloned by JavaScript -->
<template id="event-item-template">
  <div class="event-item p-2 border-bottom">
    <div class="d-flex justify-content-between align-items-center mb-1">
      <span class="event-type badge"></span>
      <small class="event-time text-muted"></small>
    </div>
    <div class="event-details">
      <div class="mb-2 event-summary"></div>
      <div class="collapse" id="">
        <pre class="bg-dark text-light p-2 rounded"><code class="event-data"></code></pre>
      </div>
      <button class="btn btn-sm btn-link p-0 toggle-details" type="button">Show details</button>
    </div>
  </div>
</template>
